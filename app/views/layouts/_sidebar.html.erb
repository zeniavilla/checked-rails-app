<div class="sidebar">
    <ul>
        <% if current_team %>
            <li class="blue-names">
                <%= link_to current_owner.class.name + " " + current_team.name, team_path(current_team.id) %>
            </li>
        <% end %>
        <li class="blue-names">
            <%= link_to "Hello, "+ current_user.name, edit_profile_path(current_user.id) %>
        </li><br>
