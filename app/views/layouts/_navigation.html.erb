<nav>
    <ul>
        <li>
            <%= link_to root_path, class: 'nav-logo' do %>
                <%= image_tag "checked-logo.png" %>
            <% end %>
        </li>
        <% if user_signed_in? %>
            <li><%= link_to chores_path do %>
                <%= fa_icon "list", title: "View chores" %>
                <% end %>
            </li>
            <li><%= link_to new_category_chore_path(Category.find_or_create_by(title: "Uncategorized").id) do %>
                    <%= fa_icon "plus", title: "Add chore" %>
                <% end %>
            </li>
            <li><%= link_to edit_profile_path(current_user) do %>
                    <%= fa_icon "user", title: "View profile" %>
                <% end %>
            </li>
            <li><%= link_to "Sign Out", sign_out_path %></li>
        <% else %>
            <li><%= link_to "Sign In", sign_in_path %></li>
            <li><%= link_to "Sign Up", sign_up_path %></li>
        <% end %>
    </ul>
</nav>