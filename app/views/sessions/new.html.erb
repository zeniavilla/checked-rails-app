<h2>Sign in</h2>

<%= form_tag "/sign_in" do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign in" %>
  </div>
<% end %>