<h2>Sign in</h2>

<%= form_tag "/sign_in" do %>

  <div class="field">
    <%= label_tag :email, "<i class='fa fa-envelope-o' aria-hidden='true'></i>".html_safe %>
    <%= email_field_tag :email, nil, placeholder: "Email", class: "text-field" %>
  </div>

  <div class="field">
    <%= label_tag :password, "<i class='fa fa-unlock-alt' aria-hidden='true'></i>".html_safe %>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "text-field" %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign in", class: "btn-primary" %>
  </div>
<% end %>

<br><%= link_to "Continue with Facebook", "/auth/facebook", class: "btn-facebook" %>

<br><br><br><%= link_to "Sign up", sign_up_path, class: "user-link" %>